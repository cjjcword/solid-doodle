#include<stdio.h>
#include<time.h>
#include<stdlib.h>
//猜数字游戏
void game()
{
	int rand_num = rand() % 100 + 1;
	int guess_num = 0;
	do
	{
		printf("请输入你猜的数字：");
		scanf_s("%d",&guess_num);
		if (guess_num > rand_num)
		{
			printf("猜大了\n");
		}
		else if (guess_num < rand_num)
		{
			printf("猜小了\n");
		}
		else if (guess_num == rand_num)
		{
			printf("恭喜你，猜对了！\n");
			break;
		}
	} while (guess_num!=rand_num);
}

int main()
{
	int input = 0;
	srand((unsigned)time(NULL));
	do
	{
		printf("**********************************\n");
	    printf("***********猜数字游戏*************\n");
	    printf("**********************************\n");
	    printf("*****1.开始游戏****0.退出游戏*****\n");
	    printf("**********************************\n");
		printf("请选择游戏指令：");
		scanf_s("%d", &input);
		switch (input)
		{
		case 1:
			game();
			break;
		case 0:
			break;
		default:
			printf("选择错误,请重新输入!\n");
		}
	} while (input);
	return 0;
